{% extends 'admin.html.twig' %}

{% block admin_title %}
    {{ page_title }}
{% endblock admin_title %}

{% block admin_content %}
    <div id="content">
    <div class="page-head">
        <h2 class="page-title">Editer une station</h2>
    </div>

    <div class="row main">
        <div class="col-lg-12">
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <i class="glyphicon glyphicon-info-sign"></i>
                            <span>Edition d'une station</span>
                        </div>
                        <div class="panel-body">
                            {% if station_edited is defined %}
                            <div class="col-lg-12">
                                <div class="alert alert-success">
                                    <p>
                                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                        La station a été éditée.
                                    </p>
                                </div>
                            </div>
                            {% endif %}
                            <form role="form" method="post" class="col-lg-4">
                                <div class="form-group">
                                    <div class="form-group">
                                        <label for="label">Nom :</label>
                                        {{ form_widget(form.name, { 'id': 'name' }) }}
                                    </div>
                                    <div class="form-group">
                                        <label for="zone">Zone :</label>
                                        {{ form_widget(form.zone, { 'id': 'zone' }) }}
                                    </div>
                                    <div class="form-group">
                                        <label for="label">National :</label>
                                        {{ form_widget(form.national, { 'id': 'national' }) }}
                                    </div>
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-default" id="add_button" name="add_button" value="true">Modifier</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock admin_content %}