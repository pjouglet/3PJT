{% extends 'admin.html.twig' %}

{% block admin_title %}
    {{ page_title }}
{% endblock admin_title %}

{% block admin_content %}
    <div id="content">
        <div class="page-head">
            <h2 class="page-title">Gares</h2>
        </div>

        <div class="row main">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <i class="glyphicon glyphicon-info-sign"></i>
                                <span>Liste des gares</span>
                            </div>
                            <div class="panel-body">
                                <div class="add_station pull-right">
                                    <a href="{{ path('supinfo_commander_administration_add_station') }}">
                                        <button class="btn btn-primary" id="add_employee" type="button">Ajouter une gare</button>
                                    </a>
                                </div>

                                <div class="table-responsive col-lg-12">
                                    <table class="table table-hover">
                                        <tr>
                                            <th>Id</th>
                                            <th>Label</th>
                                            <th>Zone</th>
                                            <th>National</th>
                                            <th>Actions</th>
                                        </tr>
                                        {% for station in stations_list %}
                                            <tr>
                                                <td>{{ station.id }}</td>
                                                <td>{{ station.name }}</td>
                                                <td>
                                                {% for zone in zones_list %}
                                                    {% if zone.id == station.zoneid %}
                                                        {{ zone.label }}
                                                    {% endif %}
                                                {% endfor %}
                                                </td>
                                                <td>{% if station.isNational() == 0 %}<span class="warning">non</span>{% else %}<span class="success">oui</span>{% endif %}</td>
                                                <td>
                                                    <a href="{{ path('supinfo_commander_administration_edit_station', {'id': station.id}) }}" >modifier</a>
                                                    <a href="#" class="delete_station">supprimer<span class="hidden">{{ path('supinfo_commander_administration_delete_station', {'id': station.id}) }}</span> </a>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
{% endblock admin_content %}