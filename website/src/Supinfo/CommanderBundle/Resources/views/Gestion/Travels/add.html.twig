{% extends 'admin.html.twig' %}

{% block admin_title %}
    {{ page_title }}
{% endblock admin_title %}

{% block admin_content %}
    <div id="content">
    <div class="page-head">
        <h2 class="page-title">Ajout d'un segment</h2>
    </div>

    <div class="row main">
        <div class="col-lg-12">
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <i class="glyphicon glyphicon-info-sign"></i>
                            <span>Ajouter un trajet</span>
                        </div>
                        <div class="panel-body">
                            {% if trajet_exist is defined %}
                                <div class="col-lg-12">
                                    <div class="alert alert-danger">
                                        <p>
                                            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                            Une trajet identique existe déjà.
                                        </p>
                                    </div>
                                </div>
                            {% endif %}
                            <form role="form" method="post" class="col-lg-4">
                                <div class="form-group">
                                    <div class="form-group">
                                        <label for="label">Nom :</label>
                                        {{ form_widget(form.label, { 'id': 'label' }) }}
                                    </div>
                                    <div class="form-group">
                                        <label for="zone">Trajet national :</label>
                                        {{ form_widget(form.national, { 'id': 'national' }) }}
                                    </div>
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-default" id="add_button" name="add_button" value="true">Ajouter</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock admin_content %}