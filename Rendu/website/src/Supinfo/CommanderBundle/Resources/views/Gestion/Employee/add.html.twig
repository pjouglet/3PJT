{% extends 'admin.html.twig' %}

{% block admin_title %}
    {{ page_title }}
{% endblock admin_title %}

{% block admin_content %}
    <div id="content">
        <div class="page-head">
            <h2 class="page-title">Ajouter un employé</h2>
        </div>

        <div class="row main">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <i class="glyphicon glyphicon-info-sign"></i>
                                <span>Ajout d'un employé</span>
                            </div>
                            <div class="panel-body">
                                {% if user_exist is defined %}
                                    <div class="col-lg-12">
                                        <div class="alert alert-danger">
                                            <p>
                                                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                                Un employé existe déjà avec cette adresse email.
                                            </p>
                                        </div>
                                    </div>
                                {% endif %}
                                <form role="form" method="post" class="col-lg-4">
                                    <div class="form-group">
                                        <div class="form-group">
                                            <label for="firstname">Prénom :</label>
                                            {{ form_widget(form.firstname, { 'id': 'firstname' }) }}
                                        </div>
                                        <div class="form-group">
                                            <label for="lastname">Nom :</label>
                                            {{ form_widget(form.lastname, { 'id': 'lastname' }) }}
                                        </div>
                                        <div class="form-group">
                                            <label for="email">Adresse email :</label>
                                            {{ form_widget(form.email, { 'id': 'email' }) }}
                                        </div>
                                        <div class="form-group">
                                            <label for="email">Mot de passe :</label>
                                            {{ form_widget(form.password, { 'id': 'password' }) }}
                                        </div>
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-default" id="add_button" name="add_button" value="true">Ajouter</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock admin_content %}