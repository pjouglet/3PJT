{% extends 'admin.html.twig' %}

{% block admin_title %}
    {{ page_title }}
{% endblock admin_title %}

{% block admin_content %}
    <div id="content">
        <div class="page-head">
            <h2 class="page-title">Clients</h2>
        </div>

        <div class="row main">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <i class="glyphicon glyphicon-info-sign"></i>
                                <span>Liste des clients</span>
                            </div>
                            <div class="panel-body">
                                <div class="table-responsive col-lg-12">
                                    <table class="table table-hover">
                                        <tr>
                                            <th>Id</th>
                                            <th>Prénom</th>
                                            <th>Nom</th>
                                            <th>Email</th>
                                            <th>Abonné newsletter</th>
                                            <th>Compte actif</th>
                                            <th>Actions</th>
                                        </tr>
                                        {% for user in customers_list %}
                                            <tr>
                                                <td>{{ user.id }}</td>
                                                <td>{{ user.firstname }}</td>
                                                <td>{{ user.lastname }}</td>
                                                <td>{{ user.email }}</td>
                                                <td>{% if user.newsletter == 0 %}<span class="warning">non</span>{% else %}<span class="success">oui</span>{% endif %}</td>
                                                <td>{% if user.active == 0 %}<span class="warning">non</span>{% else %}<span class="success">oui</span>{% endif %}</td>
                                                <td>
                                                    <a href="{{ path('supinfo_commander_administration_view_customer', {'id': user.id}) }}" >informations</a>
                                                    {% if user.active == 1 %}
                                                        <a href="#" class="delete_customer">supprimer<span class="hidden">{{ path('supinfo_commander_administration_delete_customer', {'id': user.id}) }}</span></a>
                                                    {% else %}
                                                        <a href="#" class="activate_customer">ré-activer<span class="hidden">{{ path('supinfo_commander_administration_activate_customer', {'id': user.id}) }}</span></a>
                                                    {% endif %}
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock admin_content %}